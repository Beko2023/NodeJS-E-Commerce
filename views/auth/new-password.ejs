<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs', {isAuthenticated: isAuthenticated}) %>

    <main>
        
        <form class="login-form" action="/new-password" method="POST">
            <div class="form-control">
                <label for="password">New Password</label>
                <input type="password" name="password" id="password" value="<%= input.newPassword %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="<%= input.confirmedPassword %>">
            </div>
            <input type="hidden" name="userId" value="<%= userId %>" />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
            <button class="btn" type="submit">Update Password</button>
        </form>
            <% if (errorMessage && errorMessage.length > 0) { %>
                <p class="user-msg error-msg"><%= errorMessage %></p>
            <% } %>
    </main>
<%- include('../includes/end.ejs') %>